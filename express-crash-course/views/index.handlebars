<h1>{{title}}</h1>
<form action="/api/members" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name">
    <label for="email">Email</label>
    <input type="text" name="email">
    <input type="submit" value="Add Member">
</form>
<h4>Members</h4>
<ul>
    {{#each members}}
    <li>{{this.name}}: {{this.email}}</li>
    {{/each}}
</ul>